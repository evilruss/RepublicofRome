@using RoRService.Models.ViewModels.CardsViewModels
@model IntrigueVM

<div class="card">
    <div class="card-header">
        <div class="card-name">@Model.Name</div>
    </div>

    <div class="pull-left" style="display: block;">
        <img src="~/Images/Cards/@Model.Image" class="card-img" />
        <div class="card-type">INTRIGUE</div>
    </div>
    <div class="card-text">
        @Html.Raw(Model.Text)
    </div>
</div>
