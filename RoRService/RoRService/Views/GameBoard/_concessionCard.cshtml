@using RoRService.Models.ViewModels.CardsViewModels
@model ConcessionVM

<div class="card">
    <div class="card-header">
        <div class="card-name">@Model.Name</div>
    </div>

    <div class="pull-left" style="display: block;">
        <img src="~/Images/Cards/@Model.Image" class="card-img" />
        <div class="card-type">CONCESSION</div>
    </div>
    <div class="card-item">
        Income <div class="pull-right">@Model.Income</div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Text))
    {
        <div class="card-text">
            @Html.Raw(Model.Text)
        </div>
    }
</div>